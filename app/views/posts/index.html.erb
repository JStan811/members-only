<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
      -
      <%= post.body %>
      <% if user_signed_in? %>
        | by: <%= post.user.username %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if !user_signed_in? %>
  <%= button_to "login", new_user_session_path, method: :get  %>
<% end %>

<% if user_signed_in? %>
  <%= button_to "create post", new_post_path, method: :get  %>
  <%= button_to "logout", destroy_user_session_path, method: :delete  %>
<% end %>
